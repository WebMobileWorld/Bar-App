<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <item android:state_pressed="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="@color/whiteColor" android:centerColor="@color/whiteColor" android:endColor="@color/whiteColor" android:angle="270"/>
                    <solid android:color="@color/darkBrownColor" />
                    <stroke android:width="1dp" />
                </shape>
            </item>
    		<item android:bottom="3px" android:top="3px" android:left="3px" android:right="3px">
    		    <shape>
    		        <gradient android:startColor="@color/whiteColor" android:centerColor="@color/whiteColor" android:endColor="@color/whiteColor" android:angle="270"/>
        		</shape>
    		</item>
		</layer-list>
    </item>
      
    <item android:state_focused="true">
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="@color/whiteColor" android:centerColor="@color/whiteColor" android:endColor="@color/whiteColor" android:angle="270"/>
                    <solid android:color="@color/darkBrownColor" />
                    <stroke android:width="1dp" />
                </shape>
            </item>
    		<item android:bottom="3px" android:top="3px" android:left="3px" android:right="3px">
    		    <shape>
    		        <gradient android:startColor="@color/whiteColor" android:centerColor="@color/whiteColor" android:endColor="@color/whiteColor" android:angle="270"/>
        		</shape>
    		</item>
		</layer-list>
    </item>
 
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="@color/whiteColor" android:centerColor="@color/whiteColor" android:endColor="@color/whiteColor" android:angle="270"/>
                    <solid android:color="@color/greyColor" />
                    <stroke android:width="1dp" />
                </shape>
            </item>
    		<item android:bottom="3px" android:top="3px" android:left="3px" android:right="3px">
    		    <shape>
    		        <gradient android:startColor="@color/whiteColor" android:centerColor="@color/whiteColor" android:endColor="@color/whiteColor" android:angle="270"/>
        		</shape>
    		</item>
		</layer-list>
    </item>
</selector>