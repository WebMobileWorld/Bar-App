<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bar_list_item_selector"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/ivProfilePicture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tvBarAddress"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/no_profile_picture" />

    <TextView
        android:id="@+id/tvName"
        style="@style/textStyleBrownNormal_16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/ivDeleteReply"
        android:layout_toRightOf="@+id/ivProfilePicture"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Name A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! A Real Austin Institution! " />

    <TextView
        android:id="@+id/tvReply"
        style="@style/textStyleAutoSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/ivProfilePicture"
        android:ellipsize="end"
        android:maxLines="5"
        tools:text="Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description Comment Description " />

    <TextView
        android:id="@+id/tvReplyDateTime"
        style="@style/textStyleAutoSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvReply"
        android:layout_marginRight="5dp"
        android:layout_marginTop="3dp"
        android:layout_toRightOf="@+id/ivProfilePicture"
        android:ellipsize="end"
        android:maxLines="2"
        tools:text="Date-Time" />

    <ImageView
        android:id="@+id/ivDeleteReply"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/ivProfilePicture"
        android:layout_marginLeft="10dp"
        android:src="@drawable/delete"
        android:visibility="gone" />

</RelativeLayout>