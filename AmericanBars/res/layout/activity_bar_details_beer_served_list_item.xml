<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/relativeLayoutBeer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bar_list_item_selector"
    android:paddingTop="10dp" >

    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/ivBeerLogo"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_marginRight="10dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/ivNextArrow"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:gravity="right"
            android:src="@drawable/arrow_next" />

        <TextView
            android:id="@+id/tvBeerName"
            style="@style/textStyleHomePage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/ivBeerLogo"
            android:layout_toLeftOf="@+id/ivNextArrow"
            android:layout_toRightOf="@+id/ivBeerLogo"
            android:singleLine="true"
            tools:text="Bar Event Name kfsdjf klsdjfkljsdkfljdsklfjklsdjfklsdjfkldklfjsdlfjsdklj" />

        <TextView
            android:id="@+id/tvBeerType"
            style="@style/textStyle12Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvBeerName"
            android:layout_below="@+id/tvBeerName"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/ivNextArrow"
            android:singleLine="true"
            tools:text="Lorem Ipsum dskfjls dfklasdjfkljsdlfjlasdj " />

        <TextView
            android:id="@+id/tvBeerProducer"
            style="@style/textStyle12Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/tvBeerName"
            android:layout_below="@+id/tvBeerType"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/ivNextArrow"
            android:singleLine="true"
            tools:text="Producer" />

        <TextView
            android:id="@+id/tvBeerCityProduced"
            style="@style/textStyle12Normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/ivBeerLogo"
            android:layout_alignLeft="@+id/tvBeerName"
            android:layout_below="@+id/tvBeerProducer"
            android:layout_marginTop="1dp"
            android:layout_toLeftOf="@+id/ivNextArrow"
            android:singleLine="true"
            tools:text="City Produced" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@+id/relativeLayout"
        android:layout_marginTop="10dp"
        android:background="@color/spinner_border_color" />

</RelativeLayout>