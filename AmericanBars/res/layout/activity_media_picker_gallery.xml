<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="@dimen/dim_10_media" >

    <ImageView
        android:id="@+id/mediapicker_gallery_image"
        android:layout_width="@dimen/dim_80_media"
        android:layout_height="@dimen/dim_80_media"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        android:src="@drawable/gallery_small_place_holder_01" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_weight="1"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/mediapicker_gallery_name"
            style="@style/textStyleRememberMe"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:text="Gallery of images" />

        <TextView
            android:id="@+id/mediapicker_gallery_num"
            style="@style/textStyleAutoSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:layout_marginTop="@dimen/dim_10_media"
            android:text="23 Videos" />

        <TextView
            android:id="@+id/mediapicker_gallery_location"
            style="@style/textStyleAutoSearch"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dim_10_media"
            android:text="Internal storage" />
    </LinearLayout>

    <ImageView
        android:layout_width="@dimen/dim_20_media"
        android:layout_height="@dimen/dim_20_media"
        android:layout_gravity="center_vertical"
        android:src="@drawable/arrow_next" />

</LinearLayout>