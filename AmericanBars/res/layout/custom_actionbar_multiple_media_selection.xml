<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:background="@color/lightBrownColor" >

    <TextView
        android:id="@+id/tvTitleActionBar"
        style="@style/text_title_style_action_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="50dp"
        android:singleLine="true"
        android:text="" />

    <ImageView
        android:id="@+id/ivBackActionBar"
        android:layout_width="@dimen/image_back_arrow_width_height"
        android:layout_height="@dimen/image_back_arrow_width_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        android:src="@drawable/arrow_back_action_bar"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/ivMediaCapture"
        android:layout_alignParentRight="true"
        android:text="   "
        android:visibility="visible" />

    <ImageView
        android:id="@+id/ivMediaCapture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/textView1"
        android:src="@drawable/media_picture" />

    <Button
        android:id="@+id/btnActionBarNext"
        style="@style/button_style"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_alignBottom="@+id/tvTitleActionBar"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/tvTitleActionBar"
        android:paddingRight="5dp"
        android:text="Next"
        android:visibility="invisible" />

</RelativeLayout>