<?xml version="1.0" encoding="utf-8"?>
<!-- Beer Details Screen -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/scrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor"
    android:fillViewport="true"
    android:scrollbars="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bar_list_item_selector"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/relativeLayoutHeader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <ImageView
                android:id="@+id/ivBeerLogo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_alignParentLeft="true"
                android:layout_alignTop="@+id/tvBeerName"
                android:layout_centerInParent="true"
                android:layout_marginRight="10dp"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/no_image_beer" />

            <!-- Beer Name -->

            <TextView
                android:id="@+id/tvBeerName"
                style="@style/textStyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/ivFullHalfMug"
                android:layout_toRightOf="@+id/ivBeerLogo"
                tools:text="Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name Beer Name " />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutHeader1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/relativeLayoutHeader"
            android:layout_below="@+id/relativeLayoutHeader"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="10dp" >

            <TextView
                android:id="@+id/tvBrewedByTitle"
                style="@style/textStyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Brewed By : " />

            <TextView
                android:id="@+id/tvBrewedBy"
                style="@style/textStyleAutoSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBrewedByTitle"
                android:layout_marginTop="2dp"
                tools:text="Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content Brewed by Content " />

            <TextView
                android:id="@+id/tvCityProducedTitle"
                style="@style/textStyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvBrewedBy"
                android:layout_marginTop="5dp"
                android:text="City Produced :" />

            <TextView
                android:id="@+id/tvCityProduced"
                style="@style/textStyleAutoSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCityProducedTitle"
                android:layout_marginTop="2dp"
                tools:text="City Produced Content dflaksdjflkjasdlkfjklsdfjlksdjfklsjdfkljsladkfjlksdjflkjsadlkfjlsdkfjlksdjflksjdfkljasdlkfjsdljsdlfkjlskd" />

            <TextView
                android:id="@+id/tvTypeTitle"
                style="@style/textStyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvCityProduced"
                android:layout_marginTop="5dp"
                android:text="Type :" />

            <TextView
                android:id="@+id/tvType"
                style="@style/textStyleAutoSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvTypeTitle"
                android:layout_marginTop="2dp"
                tools:text="Type Content kdlfjlsdjflkdjlkfjlksdjflkjsdlfjlasdkjfklsdjklfjdklsjfkljdfklsjkl" />

            <TextView
                android:id="@+id/tvWebsiteTitle"
                style="@style/textStyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvType"
                android:layout_marginTop="5dp"
                android:text="Website :" />

            <TextView
                android:id="@+id/tvWebsite"
                style="@style/textStyleWebsite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvWebsiteTitle"
                android:layout_marginTop="2dp"
                android:autoLink="web"
                android:focusable="false"
                android:focusableInTouchMode="false"
                tools:text="Website Content kdlfjlsdjflkdjlkfjlksdjflkjsdlfjlasdkjfklsdjklfjdklsjfkljdfklsjkl" />

            <TextView
                android:id="@+id/tvABVTitle"
                style="@style/textStyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/tvWebsite"
                android:layout_marginTop="5dp"
                android:text="ABV :" />

            <TextView
                android:id="@+id/tvABV"
                style="@style/textStyleAutoSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvABVTitle"
                android:layout_marginTop="2dp"
                tools:text="ABV Content kdlfjlsdjflkdjlkfjlksdjflkjsdlfjlasdkjfklsdjklfjdklsjfkljdfklsjkl" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutHeader1"
            android:paddingBottom="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="5dp" >

            <TextView
                android:id="@+id/tvDescriptionTitle"
                style="@style/textStyleBarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:text="Description :" />

            <TextView
                android:id="@+id/tvDescription"
                style="@style/textStyleAutoSearch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvDescriptionTitle"
                android:layout_marginTop="2dp"
                android:ellipsize="end"
                android:maxLines="4"
                tools:text="Lorem Ipsum is simply dummy text Lorem Ipsum is simply dummy text Lorem Ipsum is simply dummy text Lorem Ipsum is simply dummy text Lorem Ipsum is simply dummy text Lorem Ipsum is simply dummy text Lorem Ipsum is simply dummy text Lorem Ipsum is simply dsklfjs dfjklsdjfkls djfkljsdklfjklsdjflksdjlfjlsdkjfklsdjflkjdslfjdklsfjl" />

            <RelativeLayout
                android:id="@+id/relativeLayoutShowMoreDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvDescription"
                android:layout_marginTop="5dp"
                android:visibility="gone" >

                <TextView
                    android:id="@+id/tvShowMore"
                    style="@style/textStyleShowMore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="right"
                    android:text="Show More" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignLeft="@+id/tvShowMore"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/tvShowMore"
                    android:background="@color/lightBrownColor" />
            </RelativeLayout>
        </RelativeLayout>

        <View
            android:id="@+id/viewLine1"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/relativeLayoutDescription"
            android:layout_marginBottom="1px"
            android:layout_marginTop="5dp"
            android:background="@color/spinner_border_color" />

        <View
            android:id="@+id/viewLine2"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/viewLine1"
            android:layout_marginTop="1dp"
            android:background="@color/spinner_border_color" />

        <RelativeLayout
            android:id="@+id/relativeLayoutShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewLine2"
            android:padding="10dp" >

            <ImageView
                android:id="@+id/ivShareFacebook"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/share_fb"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivShareTwitter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ivShareFacebook"
                android:src="@drawable/share_twitter"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivShareLinkedIn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ivShareTwitter"
                android:src="@drawable/share_linked_in"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivShareGooglePlus"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ivShareLinkedIn"
                android:src="@drawable/share_google"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivShareDribble"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@+id/ivShareGooglePlus"
                android:src="@drawable/share_dribble"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivSharePinterest"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/ivShareDribble"
                android:src="@drawable/share_pinterest"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/ivShare"
                android:layout_width="@dimen/share_icon_width_height"
                android:layout_height="@dimen/share_icon_width_height"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/share" />

            <Spinner
                android:id="@+id/spinnerShare"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/edittext_selector"
                android:prompt="@string/txt_spinner_share_title"
                android:spinnerMode="dialog"
                android:visibility="invisible" />
        </RelativeLayout>

        <View
            android:id="@+id/viewLine3"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/relativeLayoutShare"
            android:layout_marginBottom="1px"
            android:background="@color/spinner_border_color" />

        <View
            android:id="@+id/viewLine4"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/viewLine3"
            android:layout_marginTop="1dp"
            android:background="@color/spinner_border_color" />

        <LinearLayout
            android:id="@+id/linearLayoutButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewLine4"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            android:weightSum="1" >

            <Button
                android:id="@+id/btnAddToFavorite"
                style="@style/button_style_gradient"
                android:layout_width="@dimen/btn_fav_width"
                android:layout_height="50dp"
                android:layout_marginRight="5dp"
                android:gravity="center"
                android:text="@string/btn_add_my_beer" />

            <Button
                android:id="@+id/btnLikeThisBeer"
                style="@style/button_style_gradient"
                android:layout_width="@dimen/btn_fav_width"
                android:layout_height="50dp"
                android:layout_marginLeft="5dp"
                android:text="@string/btn_like_this_beer" />
        </LinearLayout>

        <View
            android:id="@+id/viewLine5"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/linearLayoutButton"
            android:layout_marginBottom="1px"
            android:background="@color/spinner_border_color" />

        <View
            android:id="@+id/viewLine6"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_below="@+id/viewLine5"
            android:layout_marginTop="1dp"
            android:background="@color/spinner_border_color" />

        <RelativeLayout
            android:id="@+id/relativeLayoutTakeALookInside"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/viewLine6"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/tvTakeALookInside"
                style="@style/textStyleRememberMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/lightBrownColor"
                android:padding="10dp"
                android:text="Picture / Video" />

            <RelativeLayout
                android:id="@+id/relativeLayoutVideo"
                android:layout_width="@dimen/relativeLayoutVideo_width"
                android:layout_height="@dimen/relativeLayoutVideo_height"
                android:layout_below="@+id/tvTakeALookInside"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:visibility="gone" >

                <ImageView
                    android:id="@+id/ivVideo"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relativeLayoutVideo_height"
                    android:scaleType="fitXY"
                    android:src="@drawable/no_image_bar" />

                <com.google.android.youtube.player.YouTubeThumbnailView
                    android:id="@+id/ivVideoThumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/relativeLayoutVideo_height"
                    android:layout_centerHorizontal="true"
                    android:background="@android:color/black"
                    android:scaleType="fitXY"
                    android:src="@drawable/video_place_holder" />

                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/play_icon" />
            </RelativeLayout>

            <ImageView
                android:id="@+id/ivPicture"
                android:layout_width="@dimen/relativeLayoutVideo_width"
                android:layout_height="@dimen/relativeLayoutVideo_height"
                android:layout_below="@+id/tvTakeALookInside"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:scaleType="fitXY"
                android:src="@drawable/gallery_big_place_holder"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutLeaveAComment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutTakeALookInside"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingTop="15dp" >

            <TextView
                android:id="@+id/tvLeaveAComment"
                style="@style/textStyleRememberMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:background="@color/lightBrownColor"
                android:padding="10dp"
                android:text="Leave a Comment" />

            <EditText
                android:id="@+id/etCommentTitle"
                style="@style/edittext_style_my_profile_grey_to_lightbrown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextHeightMyProfile"
                android:layout_below="@+id/tvLeaveAComment"
                android:layout_marginTop="10dp"
                android:hint="Tell us what you think!"
                android:nextFocusLeft="@id/etCommentTitle"
                android:nextFocusUp="@id/etCommentTitle" />

            <EditText
                android:id="@+id/etCommentDescription"
                style="@style/edittext_multiline_style_grey_to_lightbrown"
                android:layout_width="match_parent"
                android:layout_height="@dimen/editTextMultilineHeightMyProfile"
                android:layout_below="@id/etCommentTitle"
                android:layout_marginTop="10dp"
                android:gravity="top"
                android:hint="Write Here"
                android:nextFocusLeft="@id/etCommentDescription"
                android:nextFocusUp="@id/etCommentDescription"
                android:scrollbars="vertical" />

            <Button
                android:id="@+id/buttonPostComment"
                style="@style/button_style_gradient"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/etCommentDescription"
                android:layout_marginTop="15dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Post" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutRavesAndRants"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/relativeLayoutLeaveAComment"
            android:layout_marginTop="15dp" >

            <TextView
                android:id="@+id/tvRavesAndRants"
                style="@style/textStyleRememberMe"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:background="@color/lightBrownColor"
                android:padding="10dp"
                android:text="@string/txtRantsAndRaves" />

            <LinearLayout
                android:id="@+id/hiddenLinearLayoutReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvRavesAndRants"
                android:orientation="vertical"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relativeLayoutViewAllRavesAndRants"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/relativeLayoutRavesAndRants"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="15dp" >

            <TextView
                android:id="@+id/tvViewAllRavesAndRants"
                style="@style/textStyleShowMore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:gravity="right"
                android:text="View All" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_alignLeft="@+id/tvViewAllRavesAndRants"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/tvViewAllRavesAndRants"
                android:background="@color/lightBrownColor" />
        </RelativeLayout>
    </RelativeLayout>

</ScrollView>